<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FilmFinder" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        

    </style>

    <style name="FilmFinderFDayNight">
        <item name="android:background">@drawable/corner_background</item>
    </style>

    <style name="TopBarFDayNight">parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="BottomBarFDayNight">
        <item name="android:background">@color/purple_200</item>
        <item name="itemIconTint">@android:color/white</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="SettingsIconDayNight" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="itemIconTint">@color/icons_dark</item>
    </style>



</resources>